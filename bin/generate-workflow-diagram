#!/usr/bin/env bash

echo "Generating Paella Workflow Diagrams:"
php bin/console workflow:dump order_v1 declined complete canceled  | dot -Tpng -o src/Resources/docs/orders-workflow.png
php bin/console workflow:dump order_v2 declined complete canceled  | dot -Tpng -o src/Resources/docs/orders-workflow-v2.png
php bin/console workflow:dump merchant_onboarding complete canceled  | dot -Tpng -o src/Resources/docs/merchant_onboarding-workflow.png
php bin/console workflow:dump merchant_onboarding_step complete  | dot -Tpng -o src/Resources/docs/merchant_onboarding_step-workflow.png
echo "DONE."
