#!/bin/bash
set -e

# Set permissions based on ENV variable
usermod -u ${PHP_USER_ID} www-data
echo "Set uid=${PHP_USER_ID} to www-data user."

# Create var directory and make sure it's owned by www-data
test -d "$APP_ROOT/var" || mkdir "$APP_ROOT/var"
chown -R www-data $APP_ROOT/var

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- php-fpm "$@"
fi

exec "$@"
